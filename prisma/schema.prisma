generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model user {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String
  password String
}

model project {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  tags        skill[]
  images      String[]
  ProjectType ProjectType @default(Individual)
  createdAt   DateTime    @default(now())
}

model skill {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  title      String
  createdAt  DateTime @default(now())
  projects   project? @relation(fields: [projectsId], references: [id])
  projectsId String?  @db.ObjectId
}

model experience {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  location  String
  from      DateTime
  to        DateTime
  isPresent Boolean  @default(false)
  createdAt DateTime @default(now())
  icon      String
}

enum UploadStatus {
  PENDING
  PROCESSING
  FAILED
  SUCCESS
}

model File {
  id           String       @id @default(cuid()) @map("_id")
  name         String
  uploadStatus UploadStatus @default(PENDING)
  url          String
  key          String
  fileType     String
  createdAt    DateTime     @default(now())
}

enum ProjectType {
  Individual
  Organization
}
